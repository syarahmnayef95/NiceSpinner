<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#FFF"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">

    <TextView
        android:id="@+id/tv_tinted_spinner"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="#00000000"
        android:ellipsize="marquee"
        android:gravity="right|center_vertical"
        android:paddingBottom="@dimen/one_and_a_half_grid_unit"
        android:paddingTop="@dimen/one_and_a_half_grid_unit"
        android:singleLine="true"
        android:textColor="#ccc"
        android:text="توييناdddddddddddااا"
        android:layout_centerInParent="true"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#FFF"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:layout_toRightOf="@+id/tv_tinted_spinner"
        android:layout_marginLeft="10dp"/>


</RelativeLayout>
